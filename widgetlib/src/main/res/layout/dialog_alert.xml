<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_157"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dp_170"
            android:background="@drawable/shape_bg_ffffff_r10"
            android:orientation="vertical">

        <TextView
                android:id="@+id/dialog_alert_tv_content"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="3"
                android:padding="@dimen/dp_10"
                android:text="确定要退出登录吗"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_16"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/dialog_alert_tv_left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="再看看"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_14"/>

            <include
                    android:id="@+id/dialog_alert_line"
                    layout="@layout/view_vertical_line"/>

            <TextView
                    android:id="@+id/dialog_alert_tv_right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="狠心退出"
                    android:textColor="@color/color_ff2929"
                    android:textSize="@dimen/sp_14"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
            android:id="@+id/dialog_alert_iv"
            android:layout_width="@dimen/dp_127"
            android:layout_height="@dimen/dp_127"
            android:layout_centerHorizontal="true"
            android:background="@drawable/lib_ic_logo_dialog"/>

</RelativeLayout>