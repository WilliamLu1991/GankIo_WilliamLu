<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--控制头部据appbar的样式-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <!--用于控制toolbar溢出菜单的样式-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/layer_splash_bg</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="CommonCardViewStyle" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="cardBackgroundColor">@color/color_ffffff</item>
        <item name="cardCornerRadius">@dimen/dp_2</item>
        <item name="cardElevation">@dimen/dp_2</item>
    </style>

    <style name="CommonButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginTop">@dimen/dp_25</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:layout_marginBottom">@dimen/dp_10</item>
        <item name="android:background">@drawable/shape_bg_fe7e3f_r4</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="CommonTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/dp_50</item>
        <item name="android:paddingLeft">@dimen/dp_70</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="CommonVerificationCodeTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:background">@drawable/shape_bg_f7f7f7_r4</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:hint">请输入验证码</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">6</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:textColorHint">@color/color_cccccc</item>
    </style>

</resources>
