<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_220"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/banner_card_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.williamlu.widgetlib.banner_card.BannerIndicator
        android:id="@+id/banner_card_indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        android:layout_gravity="bottom"
        app:indicatorStyle="2"
        app:radius="@dimen/dp_1_5"
        app:selectColor="@color/color_ffffff"
        app:space="@dimen/dp_10"
        app:unselectedColor="@color/color_999999" />

</FrameLayout>