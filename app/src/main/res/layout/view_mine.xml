<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mine_ll"
    android:layout_width="@dimen/dp_300"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:background="@color/color_f6f6f6"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_175"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mine_iv_head"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_55"
            android:background="@drawable/lib_ic_logo" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/mine_bt_login"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/shape_bg_fe7e3f_r4"
                android:gravity="center"
                android:text="点击登录"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/sp_11"
                android:visibility="visible" />

            <TextView
                android:id="@+id/mine_tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:text="159****9901"
                android:textColor="@color/color_fe7e3f"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>

    <android.support.v7.widget.CardView
        style="@style/CommonCardViewStyle">

        <RelativeLayout
            android:id="@+id/mine_rl_bind_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12">

            <ImageView
                android:id="@+id/mine_iv_bind_account"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_19"
                android:background="@drawable/lib_ic_lulu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_toRightOf="@id/mine_iv_bind_account"
                android:text="账号绑定"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_19"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_more" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/CommonCardViewStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/mine_rl_help_center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12">

                <ImageView
                    android:id="@+id/mine_iv_help_center"
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:background="@drawable/lib_ic_lulu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_toRightOf="@id/mine_iv_help_center"
                    android:text="帮助中心"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_19"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_more" />

            </RelativeLayout>

            <include
                layout="@layout/view_horizontal_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_6"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12" />

            <RelativeLayout
                android:id="@+id/mine_rl_suggest"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12">

                <ImageView
                    android:id="@+id/mine_iv_suggest"
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:background="@drawable/lib_ic_lulu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_toRightOf="@id/mine_iv_suggest"
                    android:text="意见反馈"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_19"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_more" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/CommonCardViewStyle">

        <RelativeLayout
            android:id="@+id/mine_rl_setup"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12">

            <ImageView
                android:id="@+id/mine_iv_setup"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_19"
                android:background="@drawable/lib_ic_lulu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_toRightOf="@id/mine_iv_setup"
                android:text="设置"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_19"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_more" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>