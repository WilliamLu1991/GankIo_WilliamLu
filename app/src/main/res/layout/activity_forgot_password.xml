<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical"
    tools:context=".login.view.ForgotPasswordActivity">

    <include layout="@layout/layout_toolbar" />

    <include layout="@layout/view_horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/forgotpwd_et_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/shape_bg_f7f7f7_r4"
            android:ellipsize="end"
            android:hint="请输入11位手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_cccccc"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:id="@+id/forgotpwd_ll_phone_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal"
            android:visibility="visible">

            <EditText
                android:id="@+id/forgotpwd_et_code"
                style="@style/CommonVerificationCodeTextStyle"
                android:layout_weight="1" />

            <Button
                android:id="@+id/forgotpwd_bt_getcode"
                android:layout_width="@dimen/dp_105"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/shape_bg_ffffff_s_ff2929_r4"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/color_ff2929"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <EditText
            android:id="@+id/forgotpwd_et_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/shape_bg_f7f7f7_r4"
            android:ellipsize="end"
            android:hint="设置新密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_cccccc"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/forgotpwd_et_confirm_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/shape_bg_f7f7f7_r4"
            android:ellipsize="end"
            android:hint="确认新密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_cccccc"
            android:textSize="@dimen/sp_14" />

        <Button
            android:id="@+id/forgotpwd_bt_go"
            style="@style/CommonButtonStyle"
            android:text="提交" />

    </LinearLayout>
</LinearLayout>